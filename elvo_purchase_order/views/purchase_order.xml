<odoo>
    <record id="elvo_purchase_order" model="ir.ui.view">
        <field name="name">elvo.purchase.order</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='print_quotation']" position="after">
                <button name="to_approve_manager" string="Approve" type="object"
                        attrs="{'invisible': [('hide_approve_manager', '=', True)]}"
                        class="oe_highlight"/>
                <button name="to_approve_finance" string="Approve Finance" type="object"
                        attrs="{'invisible': [('hide_approve_finance', '=', True)]}"
                        class="oe_highlight"/>
                <button name="to_approve_bod" string="Approve BOD"
                        attrs="{'invisible': [('hide_approve_bod', '=', True)]}" type="object"
                        class="oe_highlight"/>
                <field name="hide_confirm_order" invisible="1"/>
                <field name="hide_confirm_order" invisible="1"/>
                <field name="hide_approve_finance" invisible="1"/>
                <field name="hide_approve_bod" invisible="1"/>
                <field name="hide_approve_manager" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="hide_confirm_order"/>
                <field name="hide_approve_finance"/>
                <field name="hide_approve_bod"/>
                <field name="hide_approve_manager"/>
            </xpath>
<!--            <xpath expr="//button[@name='button_confirm'][2]" position="attributes">-->
<!--                <attribute name="attrs">{'invisible': [('hide_confirm_order', '=', True)]}</attribute>-->
<!--            </xpath>-->
<!--            <xpath expr="//button[@name='button_confirm'][1]" position="attributes">-->
<!--                <attribute name="attrs">{'invisible': [('hide_confirm_order', '=', True)]}</attribute>-->
<!--            </xpath>-->
            <xpath expr="//tree/field[@name='product_uom']" position="after">
                <field name="price_latest"/>
            </xpath>
            <xpath expr="//field[@name='notes']" position="replace">
                <field name="po_notes" class="oe_inline" label="1"/>
            </xpath>
            <xpath expr="//button[@name='button_cancel']" position="replace">
                <button name="cancel_po_wizard" type="object" string="Cancel"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="elvo_cancel_form">
        <field name="name">elvo.cancel.form</field>
        <field name="model">cancel.po.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="purchase_order_id"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="approve_button" type="object" string="Yes" class="oe_highlight"/>
                    <button name="button_cancel" type="object" string="No" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="elvo_confirmation_cancel">
        <field name="name">elvo.confirmation.cancel</field>
        <field name="model">confirmation.to.cancel</field>
        <field name="arch" type="xml">
            <form>
                <group style="text-align: center">
                    <p>Apakah Anda Yakin Ingin Melakukan Cancel PO dengan Nomor
                        <field name="purchase_order_id" readonly="1" class="oe_inline"/>
                        ?
                    </p>
                </group>
                <footer>
                    <button name="approve_button" type="object" string="Yes" class="oe_highlight"/>
                    <button name="button_cancel" type="object" string="No" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>