<odoo>
    <record model="ir.ui.view" id="elvo_payment_register_confirmation">
        <field name="name">elvo.payment.register.confirmation</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_create_payments']" position="attributes">
                <attribute name="attrs">{'invisible': [('hide_create_payment', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='amount']" position="after">
                <field name="hide_create_payment" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_create_payments']" position="after">
                <button name="confirm_payment_to_bod" type="object" string="Create Payment" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="elvo_validation_payment">
        <field name="name">elvo.validation.payment</field>
        <field name="model">po.validation.payment</field>
        <field name="arch" type="xml">
            <form>
                <group style="text-align: center">
                    <p>Your payment is more than 10.000.000, so you must submit to BOD. Are you sure want to submit this
                        transaction?
                    </p>
                </group>
                <footer>
                    <button name="approve_button" type="object" string="Yes" class="oe_highlight"/>
                    <button name="button_cancel" type="object" string="No" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>